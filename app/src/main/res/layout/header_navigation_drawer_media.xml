<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp" >


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background_media" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <com.source.mmt.neighbourhood.font.RobotoTextView
            android:id="@+id/header_navigation_drawer_media_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VADNA"
            android:textColor="@android:color/white"
            android:textSize="20sp"
             />

        <com.source.mmt.neighbourhood.font.RobotoTextView
            android:id="@+id/header_navigation_drawer_media_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shiva@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="12sp"
             />
    </LinearLayout>

</RelativeLayout>