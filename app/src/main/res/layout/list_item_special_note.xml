<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6eeeeee"
    android:minHeight="96dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="name"
                android:textColor="@color/main_color_500"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:text="designation"
                android:textColor="@color/main_color_500"
                android:textSize="12sp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mobile"
                    android:textColor="@color/main_color_500"
                    android:textSize="16sp"
                    />

                <com.source.mmt.neighbourhood.font.MaterialDesignIconsTextView
                    android:id="@+id/emailId"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="0dp"
                    android:text="email"
                    android:textColor="@color/main_color_500"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <com.source.mmt.neighbourhood.font.MaterialDesignIconsTextView
                    android:id="@+id/call"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="0dp"
                    android:gravity="center"
                    android:text="@string/material_call"
                    android:textColor="@color/main_color_500"
                    android:textSize="20sp" />


                <com.source.mmt.neighbourhood.font.MaterialDesignIconsTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="0dp"
                    android:gravity="center"
                    android:text="@string/material_email"
                    android:textColor="@color/main_color_500"
                    android:textSize="20sp" />

                <com.source.mmt.neighbourhood.font.MaterialDesignIconsTextView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="0dp"
                    android:text="@string/material_share"
                    android:textColor="@color/main_color_500"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color_500" />

</LinearLayout>